	curl -skLf "https://addons.mozilla.org/firefox/downloads/latest/bitwarden-password-manager/latest.xpi" -o "${FIREFOX_EXT_PATH}/{446900e4-71c2-419f-a6a7-df9c091e268b}.xpi"

	echo -e "        [${green}*${reset}] firefox"
